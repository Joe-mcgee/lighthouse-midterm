
<aside class=' checkout col-6 col-md-4'>

  <form role="form" id="payment-form" method="POST" action="/orders">
    <section>

        <table>
          <tr>
            <th>Food & Beverage Subtotal</th>
            <td class='order-subtotal'>$0.00</td>
            <input type='hidden' name='order-subtotal' value='0' />
          </tr>
          <tr>
            <th>Taxes</th>
            <td class='order-taxes'>$0.00</td>
            <input type='hidden' name='order-taxes' value='0' />
          </tr>
          <tr>
            <th>Total</th>
            <td class='order-total'>$0.00</td>
            <input type='hidden' name='order-total' value='0' />
          </tr>
        </table>

    </section>

    <section>
      <button type='button' class='checkout-button'>Checkout</button>
      <div>
        <table class='order-list'>
          <tr>
          <th>Order Item Name</th>
          <th>Item Price</th>
          <th>Cancel</th>
          </tr>
        </table>
      </div>
    </section>

    <%- include("checkout.ejs")%>

  </form>
</aside>


